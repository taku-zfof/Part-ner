<div id="top_btn">
  <a href="#" 
     class="btn btn-info position-fixed m-1" 
     style="right: 50px;
            bottom: 40px; 
            text-align: center;
            padding: 0;
            border-radius: 50%;
            width: 55px;
            height: 55px;
            line-height: 55px;
            font-size: 1.3rem;">
    <i class="fas fa-chevron-up"></i>
  </a>
</div>

<script>
$(function() {
  $('#top_btn a').on('click',function(event){
    $('body, html').animate({
      scrollTop:0
    }, 800);
    event.preventDefault();
  });
});
</script>