<!--ブックマークが存在するか否かで分岐-->
<% if job.keeped_by?(current_user) %>

  <%= link_to bookmarks_path(job_id: job.id), method: :delete, remote: true, class: "text-white-50 btn btn-primary btn-rounded" do%>
    <i class="fas fa-bookmark fa-2x"></i>
  <% end %>

<% else %>

  <%= link_to bookmarks_path(job_id: job.id), method: :post, remote: true, class: "btn btn-primary btn-rounded" do%>
    <i class="fas fa-bookmark fa-2x"></i>
  <% end %>

<% end %>