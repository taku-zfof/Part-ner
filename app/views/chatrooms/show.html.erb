<div class="container">
  <div class="row">

    <%= render "layouts/sidebar", current: false%><!--サイドバー-->

    <div class="col-lg-8 offset-lg-1 col-md-12">

      <!--タイトル-->
      <h3 class="mt-5 mb-3"><strong>
        <% if @chatroom.user == current_user %>
          <%= @chatroom.job.user.name %>
        <% else %>
          <%= @chatroom.user.name %>
        <% end %>とのメッセージ
      </strong></h3>

      <!--チャットボックス-->
      <div class="shadow-inner bg-light overflow-auto rounded-top p-3" id="area">
        <div id="messages" data-chatroom_id=<%= @chatroom.id %> >
          <% @messages.each do |message| %>
            <%= render "/chatrooms/message2", message: message %>
          <% end %>
        </div>
      </div>

      <!--入力フォーム-->
      <div class="input-group">
        <%= text_field_tag :content, nil, data: { behavior: 'chatroom_speaker' } , class: "form-control"%>
        <button id="message_button" class="btn btn-info">送信</button>
      </div>
  
    </div>

  </div>
</div>
<%= render "chatrooms/chatscroll" %> <!--チャットを自動スクロールして最下部を表示するスクリプト-->