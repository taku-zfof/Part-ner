<div class="container">
  <div class="row">
    <%= render "layouts/sidebar",current: @user == current_user %><!--サイドバー@userが自分の時のみサイドバーのプロフ部をアクティブに-->

    <!--プロフィールカード-->
    <div class="col-lg-8 offset-lg-1 col-md-12">
      <div class="card my-5 pt-5">
        <%= image_tag @user.get_image(170,170), class: 'rounded-circle mx-auto img-thumbnail img-fluid'%>
        <h2 class="mx-auto"><strong><%= @user.name %></strong></h2>
        <h5 class="mx-auto"><strong><%= @user.age %>歳 / <%= @user.sex %> / <%= @user.prefecture %></strong></h5>
        <div class="row">
          <div class="col-8 offset-2 my-4 text-center">
            <h5><%= @user.introduction %></h5>
            <!--編集ボタンはゲストユーザーには非表示-->
            <% if @user.name != "guestuser" && @user == current_user %>
               <p class="mt-5"><%= link_to "編集する", edit_user_path(@user), class: "btn btn-info border btn-rounded"%></p>
            <% end %>
          </div>
        </div>
      </div>

      <!--ユーザーの投稿一覧。下書きは表示しない-->
      <h3 class="text-center"><strong><%= @user.name %>がパートナーを探しているバイト</strong></h3>
      <%= render "/jobs/index", jobs: @user.jobs.where(released: true).page(params[:page]).per(5) %>
      <%= render "layouts/top_btn" %><!--topに戻るボタン-->
    </div>
  </div>
</div>