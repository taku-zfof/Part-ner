<div class="container">
  <div class="row">
    <!--サイドバー-->
    <%= render "layouts/sidebar"%> 
    <!--サイドバー-->
    <!--プロフィールカード-->
    <div class="col-8 offset-1">
      <div class="card mt-5">
        <%= image_tag @user.get_image(170,170), class: 'rounded-circle mx-auto mt-5'%>
        <h2 class="mx-auto"><%= @user.name %></h2>
        <h5 class="mx-auto"><%= @user.age %>歳 / <%= @user.sex %> / <%= @user.prefecture %></h5>
        <div class="row">
          <div class="col-8 offset-2 my-4">
            <h5><%= @user.introduction %></h5>
          </div>
        </div>
        <div class="d-flex justify-content-evenly">  
          <p><%= link_to "募集を見る", root_path, class: "btn btn-secondary btn-rounded"%></p>
          <!--編集ボタンはゲストユーザーには非表示-->
          <% if @user.name != "guestuser" %>
           <p><%= link_to "編集する", edit_current_user_path(@user), class: "btn btn-secondary btn-rounded"%></p>
          <% end %>
        </div>
      </div>
      <!--プロフィールカード-->
      
    </div>
  </div>
</div>

