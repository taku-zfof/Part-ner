<script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>
<!--jpostal本体をCDNで読み込み-->
<script>
  //jpostalの実行コード
  $(window).on('turbolinks:load', function() {
    $('#job_postal_code').jpostal({
      postcode : [
        '#job_postal_code',
      ],
      address : {
        '#job_prefecture_code'  : '%3',
        '#job_other_address'  : '%4%5%6%7'
      }
    });
  });
</script>