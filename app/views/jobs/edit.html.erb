<div class="container">
  <div class="row">
    <!--サイドバー-->
    <%= render "layouts/sidebar", current: false%>
    <!--サイドバー-->

    <div class="col-8 offset-1">
      <div class="card my-5 py-4">
        <div class="row">
          <div class="col-8 offset-2">
            <h3 class="mt-4 text-center">仕事情報を編集</h3>
              <%= form_with model: @job do|f|%>
                  <%= render 'layouts/error_messages', model: f.object %>

                  <%= image_tag @job.get_image(250,250), class: 'avatar  d-inline mb-4 img-thumbnail'%></br>
                  <%= f.label :image,"紹介画像"%></br>
                  <%= f.file_field :image, class: 'uploader d-inline form-control mb-4 w-75' %></br>

                  <%= f.label :tytle ,"タイトル"%>
                  <%= f.text_field :tytle, class: "form-control mb-4 w-100 mx-auto", placeholder: "募集タイトル" %>

                  <%= f.label :job_type ,"職種"%>
                  <%= f.select :job_type, Job.job_types.keys, { include_blank: '職種を選択'}, { class: 'form-control mb-4 w-50' , required: true } %>

                  <%= f.label :introduction,"紹介文"%>
                  <%= f.text_area :introduction, class: "form-control mb-4 w-100 mx-auto", placeholder: "仕事の詳細やアピールポイントなど" %>

                  <%= f.label :hourly_wage,"時給"%><br>
                  <%= f.text_field :hourly_wage, class: "form-control mb-4 w-50 d-inline", placeholder: "半角数字"%>円<br>

                  <%= f.label :postal_code, "郵便番号"%>
                  <%= f.text_field :postal_code, class: "postal_code form-control mb-4 w-50", placeholder: "半角数字" %>

                  <%= f.label :prefecture_code, "所在地（都道府県）"%><br>
                  <%= f.select :prefecture_code, Job.prefecture_codes.keys, { include_blank: '都道府県を選択'}, { class: 'prefecture_code form-control mb-4 w-50 d-inline' , required: true }%><br>

                  <%= f.label :other_address, "市区町村以降の住所" %>
                  <%= f.text_field :other_address, class: "other_address form-control mb-4 w-100 mx-auto", placeholder: "住所を入力" %>

                  <% if @job.user == current_user%>
                    <p class="text-center"><%= f.submit "編集を保存", class: "btn btn-info btn-rounded"%>　<%= link_to "削除する", job_path(@job),method: :delete ,class: "btn btn-danger btn-rounded" %></p>
                  <% end %>

              <%end%>
            </div>
          </div>
      </div>

     </div>
  </div>
</div>
<!--jpostal読み込み-->
<%= render "/jobs/jpostal" %> 